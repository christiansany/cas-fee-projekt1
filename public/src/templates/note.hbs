<li class="note {{#if finishDate}}is-finished{{/if}}" data-note="{{_id}}">
    <div class="note__action">
        <input class="note__finish-checkbox" type="checkbox"{{#if finishDate}} checked="checked"{{/if}} data-finish-note>
    </div>
    <div class="note__content">
        <p class="note__title">{{title}}</p>
        <p class="note__description">{{description}}</p>
    </div>
    <div class="note__meta">
        <div class="note__importance">
            {{#times importance}}
                <i class="fa fa-star" aria-hidden="true"></i>
            {{/times}}
        </div>
        <div class="note__duedate">
            {{#if finishDate}}
                Finished: {{finishDateFormatted}}
            {{else}}
                Due: {{dueDateFormatted}}
            {{/if}}
        </div>
        <div class="note__edit-wrapper">
            <a href="#" class="note__edit-link" data-note-edit>
                <i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;&nbsp;edit
            </a>
            &nbsp;&nbsp;
            <a href="#" class="note__delete-link" data-note-delete>
                <i class="fa fa-trash" aria-hidden="true"></i>&nbsp;&nbsp;delete
            </a>
        </div>
    </div>
</li>
